# ================================================================================
# Artisan Craft Platform - Environment Configuration Template
# ================================================================================
# Copy this file to .env and fill in your actual values

# Application Configuration
PORT=3001
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# ================================================================================
# Google Cloud Storage Configuration
# ================================================================================
GCS_BUCKET_NAME=your-bucket-name
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_PROJECT_NUMBER=your-project-number
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# GCS Storage Settings
GCS_REGION=us-central1
MAX_FILE_SIZE=16777216
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,gif

# ================================================================================
# Blockchain Configuration (Ethereum/Sepolia)
# ================================================================================
BLOCKCHAIN_NETWORK=sepolia
INFURA_PROJECT_ID=your-infura-project-id
PRIVATE_KEY=your-private-key-here
CONTRACT_ADDRESS=your-contract-address-here

# ================================================================================
# IPFS Configuration (Pinata)
# ================================================================================
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key
PINATA_JWT_TOKEN=your-pinata-jwt-token

# ================================================================================
# Development & Debug Settings
# ================================================================================
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ================================================================================
# Feature Flags
# ================================================================================
ENABLE_GCS_STORAGE=True
ENABLE_BLOCKCHAIN=True
ENABLE_IPFS=True
ENABLE_AI_STORIES=True
ENABLE_AR_PREVIEW=True

# ================================================================================
# Performance Settings
# ================================================================================
IMAGE_QUALITY=85
THUMBNAIL_SIZE=300
PROCESSED_IMAGE_MAX_SIZE=1024